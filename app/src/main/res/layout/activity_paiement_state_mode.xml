<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PaiementStates.PaiementState"
    android:background="@drawable/degrade_de_fond"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="349dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/test"
        android:src="@drawable/bulle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="66dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/test"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/barre_horizontale2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:contentDescription="@string/test"/>

        <TextView
            android:id="@+id/paiement_title"
            style="@style/paiementstate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/paiementstate_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/paiement_subtitle"
            style="@style/paiementstate_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:text="@string/paiementstate1_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paiement_title"
            android:contentDescription="@string/test"/>

    <ImageView
        android:id="@+id/orange"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="68dp"
        android:contentDescription="@string/test"
        android:src="@drawable/orange_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paiement_subtitle" />

    <ImageView
        android:id="@+id/mtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/mtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paiement_subtitle"
        android:contentDescription="@string/test"
        android:alpha="0.4"/>

    <ImageView
        android:id="@+id/paypal"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:alpha="0.4"
        android:contentDescription="@string/test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange"
        app:srcCompat="@drawable/paypal" />

    <ImageView
        android:id="@+id/bitcoin"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="42dp"
        android:alpha="0.4"
        android:contentDescription="@string/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtn"
        app:srcCompat="@drawable/bitcoin" />

    <Button
        android:id="@+id/btn_next_paiementstate_1"
        style="@style/paiementstate_Next"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:padding="15dp"
        android:text="@string/paiementstate_Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
