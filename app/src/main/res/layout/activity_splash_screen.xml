<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/degrade_de_fond">


    <ImageView
        android:id="@+id/logo_splashscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo2"
        android:layout_marginTop="200sp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin ="20dp"
        >

        <com.github.florent37.longshadow.LongShadow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:shadow_angle="50"
            app:shadow_color="#0C000000">

            <TextView
                android:id="@+id/txt_nom_app_splashscreen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marquee_moon"
                android:text="@string/txt_nom_app_splashscreen1"
                android:textColor="@color/blanc"
                android:textSize="50sp" />
        </com.github.florent37.longshadow.LongShadow>

        <com.github.florent37.longshadow.LongShadow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:shadow_angle="60"
            app:shadow_color="#0C000000">
            <TextView
                android:id="@+id/txt_nom_app_splashscreen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_nom_app_splashscreen2"
                android:textSize="50sp"
                android:fontFamily="@font/marquee_moon"
                android:textColor="@color/my_red"

                />
        </com.github.florent37.longshadow.LongShadow>
        <com.github.florent37.longshadow.LongShadow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:shadow_angle="60"
            app:shadow_color="#0C000000">

            <TextView
                android:id="@+id/txt_nom_app_splashscreen3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R"
                android:textSize="50sp"
                android:fontFamily="@font/marquee_moon"
                android:textColor="@color/blanc"


                />

        </com.github.florent37.longshadow.LongShadow>
        <com.github.florent37.longshadow.LongShadow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:shadow_angle="60"
            app:shadow_color="#0C000000">

            <TextView
                android:id="@+id/txt_nom_app_splashscreen4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="50sp"
                android:fontFamily="@font/marquee_moon"
                android:textColor="@color/blanc"


                />

        </com.github.florent37.longshadow.LongShadow>
        <com.github.florent37.longshadow.LongShadow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:shadow_angle="60"
            app:shadow_color="#0C000000">

            <TextView
                android:id="@+id/txt_nom_app_splashscreen5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:textSize="50sp"
                android:fontFamily="@font/marquee_moon"
                android:textColor="@color/blanc"


                />

        </com.github.florent37.longshadow.LongShadow>
        <com.github.florent37.longshadow.LongShadow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:shadow_angle="60"
            app:shadow_color="#0C000000">

            <TextView
                android:id="@+id/txt_nom_app_splashscreen6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="50sp"
                android:fontFamily="@font/marquee_moon"
                android:textColor="@color/blanc"


                />

        </com.github.florent37.longshadow.LongShadow>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_splash_screen"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp">

        <ImageView
            android:id="@+id/img_pieds_de_logo_splashscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/piedsdelogo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:fontFamily="@font/poppins_extralight"
            android:text="@string/version"
            android:textColor="#CCC6D2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_pieds_de_logo_splashscreen"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>