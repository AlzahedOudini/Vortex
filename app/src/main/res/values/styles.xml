<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="onboarding_title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/intro_title_color</item>
    </style>
    <style name="point">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/noir</item>
    </style>
    <style name="onboarding_body">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/intro_description_color</item>
    </style>
    <style name="login_title">

        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blanc</item>

    </style>

    <style name="user_name_profile">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>

    <style name="setting_items">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>

    <style name="textview">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/noir</item>
    </style>

    <style name="btn_password_profile">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_password_profile</item>
    </style>
    <style name="btn_Save_profile">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/back_ground_btn_sign_in_login</item>
    </style>

    <style name="sub_title">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blanc</item>
    </style>



    <style name="edit_text" parent="sub_title">
        <item name="android:background">@drawable/back_ground_edit_login</item>
        <item name="android:layout_width">306dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/blanc</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>


    <style name="chcek_box_indicator1">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="chcek_box_indicator2">
        <item name="android:textColor">@color/important</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/back_ground_btn_sign_in_login</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/blanc</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/back_ground_spinner</item>
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/blanc</item>
    </style>

    <style name="paiementstate_title">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="paiementstate_subtitle">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="paiementstate_Next">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/back_ground_btn_sign_in_login</item>
    </style>
    <style name="paiementstate_Pay">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/btn_pay_paiement_state</item>
    </style>


    <style name="paiementstate3_title">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="popup2_title">
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="popup2_subtitle">
        <item name="android:textColor">#AA55FF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="popup2_subsubtitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="paiementstate3_subtitle">
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="btn_Ok_ps3">
        <item name="android:background">@drawable/back_ground_spinner</item>
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">52dp</item>
    </style>
</resources>
